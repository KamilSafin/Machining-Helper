<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/calculator_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/button_space"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/calculator_button"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginRight="@dimen/button_space"
            android:background="@color/card"
            android:layout_marginTop="@dimen/button_space"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/problems_button"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/button_space"
            android:background="@color/card"
            android:layout_marginTop="@dimen/button_space"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/calculator_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/button_space"
                android:src="@drawable/calculator_ic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_menu"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/calculator_image"
                android:layout_marginTop="@dimen/button_space"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="@string/calculator_menu"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>