<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:gravity="center"
              android:background="@color/background"
              android:padding="@dimen/font_size_menu">

    <RelativeLayout
        android:id="@+id/tolerance_button"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/tape">

        <ImageView
            android:id="@+id/ruler_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ruler_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruler_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_space"
            android:gravity="center_horizontal"
            android:text="@string/tolerance"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thread_button"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/caliper">

        <ImageView
            android:id="@+id/calculator_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/diameter_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calculator_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_space"
            android:gravity="center_horizontal"
            android:text="@string/holes_for_drill"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>